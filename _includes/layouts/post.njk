---
layout: layouts/base.njk
---
{# Only include the syntax highlighter CSS on blog posts, included with the CSS per-page bundle #}
{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}
<div>
	<h1 class="text-4xl font-bold mb-0">{{ title }}</h1>
	<div class="text-sm text-gray-500 mb-4">
		<time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
		{%- for tag in tags | filterTagList %}
			<a href="/tags/{{ tag | slugify }}" class="font-bold hover:underline">{{ tag }}</a>
			{%- if not loop.last %}, {% endif %}
		{%- endfor %}
	</div>

	<img src="{{ image }}" alt="{{ title }}" class="mb-4 sepia-50">

	<div class="post-content *:mb-4 *:leading-relaxed">
		{{ content | safe }}
	</div>

</div>

{% include "authorcard.njk" %}