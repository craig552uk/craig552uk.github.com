---js
// <script>
const pagination = {
	data: "collections",
	size: 1,
	alias: "tag",
	filter: ["all", "posts"],
	// addAllPagesToCollections: true,
};

const eleventyExcludeFromCollections = true;

const eleventyComputed = {
	title: "Tagged '{{ tag }}'",
	permalink: function(data) {
		return `/tags/${this.slugify(data.tag)}/`;
	}
};
---
<div>
	<h1 class="text-4xl font-bold mb-8">Posts tagged "{{ tag }}"</h1>

	<div class="mb-8">
		{% include "mailingListForm.njk" %}
	</div>

	<div class="border-t">
		<div class="divide-y">
			{% for post in collections[tag] | reverse %}
				{% include "postcard.njk" %}
			{% endfor %}
		</div>
	</div>
</div>